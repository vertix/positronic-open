# Extend the published openpi-training image (overridable via BASE_IMAGE)
ARG BASE_IMAGE=openpi-training:latest
FROM ${BASE_IMAGE}

# Set working directory
WORKDIR /positronic

# Copy the positronic repository
COPY . /positronic


# Update Python path to include both projects
ENV PYTHONPATH=/positronic:/openpi

# Default command
CMD ["bash"]
